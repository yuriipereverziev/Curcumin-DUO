.promo__top
	.container
		.promo__wrap
			.promo__left
			.promo__center
				h1.promo__title.title 
					span.blue.name MicroFlex Duo 
					span.desc активное восстановление и&nbsp;поддержка суставов&nbsp;
					span.blue 24/7
				ul.promo__list.list
					li.list__item 
						span.text-bold Снимает 
						| боль и&nbsp;воспаление
					li.list__item
						span.text-bold Помагает 
						| при артритах и&nbsp;артрозах
					li.list__item
						span.text-bold Можно применять 
						| для всех видов суставов
				.promo__wrap-pack
					picture
						source(srcset="img/pack.webp", type="image/webp")
						img.promo__pack(src="img/pack.png", alt="pack")
